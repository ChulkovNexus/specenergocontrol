<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/authPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/text_dark_color</item>
    </style>

    <style name="AuthActivity" parent="AppTheme">
        <item name="colorPrimary">@color/authPrimary</item>
        <item name="colorPrimaryDark">@color/authPrimaryDark</item>
    </style>

    <style name="InOutCircularProgressDrawableStyle" parent="Material.Drawable.CircularProgress">
        <item name="cpd_inAnimDuration">500</item>
        <item name="cpd_inStepPercent">0.5</item>
        <item name="cpd_outAnimDuration">200</item>
        <item name="cpd_strokeColor">@color/authPrimary</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_edit_text_selector</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MultilineEditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:state_multiline">true</item>
        <item name="android:background">@drawable/code_edit_text_bg</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/authPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="colorAccent">@color/app_blue_color</item>
        <item name="colorControlNormal">@color/app_red_color</item>
        <item name="colorControlActivated">@color/app_sea_color</item>
    </style>

</resources>
